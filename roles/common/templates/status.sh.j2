#!/bin/bash
# This script provides a health check for the MoTeC Automator services.
# Define Colors
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color
echo -e "${CYAN}--- MoTeC Automator Status Dashboard ---${NC}"
echo -e "\n${YELLOW}[1] Checking Logger Service (sim-to-motec)...${NC}"
sudo systemctl status sim-to-motec.service --no-pager
echo -e "\n${YELLOW}[2] Last 5 Lines of Logger Service Log...${NC}"
sudo journalctl -u sim-to-motec.service -n 5 --no-pager
echo -e "\n${YELLOW}[3] Checking Web Control Panel API...${NC}"
sudo systemctl status motec-webapp.service --no-pager
echo -e "\n${YELLOW}[4] Checking Nginx Web Server...${NC}"
sudo systemctl status nginx.service --no-pager
echo -e "\n${YELLOW}[5] Checking Samba File Share...${NC}"
sudo systemctl status smbd.service --no-pager
echo -e "\n${YELLOW}[6] Current Runtime Settings (/etc/motec/service_settings.json)...${NC}"
if [ -f "/etc/motec/service_settings.json" ]; then
    jq . /etc/motec/service_settings.json
else
    echo -e "${RED}Settings file not found.${NC}"
fi
echo -e "\n${CYAN}--- End of Status Report ---${NC}"
